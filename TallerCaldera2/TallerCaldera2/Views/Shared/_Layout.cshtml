@{
    var current = Context.Request.Path.Value?.ToLower() ?? "";
    string Active(string path) => current.Contains(path.ToLower()) ? "active" : "";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Gestión Vehicular</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="app-shell">
        <!-- Sidebar -->
        <aside class="app-sidebar">
            <div class="sidebar-header px-3 py-3">
                <span class="fw-bold text-white">Navegación</span>
            </div>
            <nav class="nav flex-column">
                <a class="nav-link @Active("/home")" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a class="nav-link @Active("/vehicles")" asp-controller="Vehicles" asp-action="Index">
                    <i class="bi bi-car-front me-2"></i> Vehículos
                </a>
                <a class="nav-link @Active("/maintenances")" asp-controller="Maintenances" asp-action="Index">
                    <i class="bi bi-tools me-2"></i> Mantenimientos
                </a>
                <a class="nav-link @Active("/alert")" asp-controller="Alert" asp-action="Index">
                    <i class="bi bi-exclamation-octagon me-2"></i> Alertas
                </a>
            </nav>
        </aside>

        <!-- Main -->
        <div class="app-main">
            <header class="app-header">
                <div class="container-fluid d-flex align-items-center">
                    <i class="bi bi-grid-3x3-gap-fill text-primary me-2"></i>
                    <div>
                        <div class="title">Sistema de Gestión Vehicular</div>
                        <div class="subtitle">Control de mantenimientos y vehículos</div>
                    </div>
                </div>
            </header>

            <main class="container-fluid app-content">
                @RenderBody()
            </main>

            <footer class="app-footer text-muted">
                <div class="container-fluid">
                    © @DateTime.Now.Year — Sistema de Gestión Vehicular
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@model TallerCaldera.Models.Vehicle
@{
    ViewData["Title"] = "Detalles del Vehículo";
    var maintenances = Model.Maintenances?.OrderByDescending(m => m.Date).ToList() ?? new List<TallerCaldera.Models.Maintenance>();
    var totalCost = maintenances.Sum(m => m.Cost ?? 0);
}

<div class="container-fluid py-4 px-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <span class="badge bg-light text-dark px-3 py-2 fs-6 me-2">@Model.Plate</span>
            <h2 class="fw-bold d-inline">@Model.Brand @Model.Model</h2>
            <p class="text-muted mb-0">Detalles del vehículo</p>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-outline-secondary me-2">
                Volver
            </a>
            <a asp-controller="Maintenances" asp-action="Create" asp-route-vehiclePlate="@Model.Plate" class="btn btn-primary">
                Agregar Mantenimiento
            </a>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-lg-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body">
                    <h5 class="text-primary mb-3">Información del Vehículo</h5>
                    <div class="row">
                        <div class="col-sm-6">
                            <p><strong>Cliente:</strong> @Model.ClientName</p>
                            <p><strong>Cédula:</strong> @Model.ClientIdNumber</p>
                            <p><strong>Teléfono:</strong> @Model.ClientPhone</p>
                            <p><strong>Combustible:</strong> @Model.FuelType</p>
                        </div>
                        <div class="col-sm-6">
                            <p><strong>Año:</strong> @Model.Year</p>
                            <p><strong>Aceite:</strong> @Model.OilType</p>
                            <p><strong>Último Mantenimiento:</strong> @(Model.LastMaintenanceDate?.ToString("dd/MM/yyyy") ?? "—")</p>
                            <p><strong>Registrado:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="row g-3">
                <div class="col-sm-6">
                    <div class="card shadow-sm border-0 rounded-4 h-100 text-center">
                        <div class="card-body">
                            <h6 class="text-muted">Mantenimientos</h6>
                            <h3 class="fw-bold text-primary">@maintenances.Count</h3>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card shadow-sm border-0 rounded-4 h-100 text-center">
                        <div class="card-body">
                            <h6 class="text-muted">Total Gastado</h6>
                            <h3 class="fw-bold text-success">₡@totalCost.ToString("N0")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <h5 class="text-primary mb-3">Historial de Mantenimientos</h5>

            @if (!maintenances.Any())
            {
                <p class="text-muted mb-0">No hay mantenimientos registrados.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Fecha</th>
                                <th>Tipo</th>
                                <th>Kilometraje</th>
                                <th>Costo</th>
                                <th>Observaciones</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in maintenances)
                            {
                                <tr>
                                    <td>@m.Date.ToString("dd/MM/yyyy")</td>
                                    <td>@m.Type</td>
                                    <td>@(m.Mileage?.ToString("N0") ?? "—") km</td>
                                    <td>₡@(m.Cost?.ToString("N0") ?? "0")</td>
                                    <td>@(string.IsNullOrWhiteSpace(m.Observations) ? "—" : m.Observations)</td>
                                    <td class="text-end">
                                        <a asp-controller="Maintenances" asp-action="Details" asp-route-id="@m.Id" class="btn btn-sm btn-outline-info">Ver</a>
                                        <a asp-controller="Maintenances" asp-action="Edit" asp-route-id="@m.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                                        <a asp-controller="Maintenances" asp-action="Delete" asp-route-id="@m.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

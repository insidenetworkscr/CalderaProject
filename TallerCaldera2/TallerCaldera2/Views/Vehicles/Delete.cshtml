@model TallerCaldera.Models.Vehicle
@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<section class="page-block">
    <h2 class="page-title text-danger mb-4">Eliminar Vehículo</h2>

    <div class="card shadow-soft p-4">
        <p>¿Seguro que deseas eliminar <strong>@Model.Brand @Model.Model</strong> (Placa: <strong>@Model.Plate</strong>)?</p>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-end mt-3">
                <a asp-action="Index" class="btn btn-outline-secondary me-2">Cancelar</a>
                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash"></i> Eliminar
                </button>
            </div>
        </form>
    </div>
</section>


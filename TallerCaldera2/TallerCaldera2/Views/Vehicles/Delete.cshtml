@model TallerCaldera.Models.Vehicle
@{
    ViewData["Title"] = "Eliminar Vehículo";
}

<div class="container py-4 px-5">
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-body">
            <h3 class="text-danger mb-4">¿Estás seguro de eliminar este vehículo?</h3>
            <p class="text-muted mb-4">
                Esta acción eliminará <strong>permanentemente</strong> el vehículo y todos sus mantenimientos asociados.
            </p>

            <dl class="row">
                <dt class="col-sm-3">Placa</dt>
                <dd class="col-sm-9">@Model.Plate</dd>

                <dt class="col-sm-3">Cliente</dt>
                <dd class="col-sm-9">@Model.ClientName</dd>

                <dt class="col-sm-3">Vehículo</dt>
                <dd class="col-sm-9">@Model.Brand @Model.Model (@Model.Year)</dd>

                <dt class="col-sm-3">Teléfono</dt>
                <dd class="col-sm-9">@Model.ClientPhone</dd>

                <dt class="col-sm-3">Registrado</dt>
                <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy")</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Plate" />
                <div class="d-flex justify-content-end mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

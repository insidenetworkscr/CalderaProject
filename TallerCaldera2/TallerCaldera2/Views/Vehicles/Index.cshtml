@model IEnumerable<TallerCaldera.Models.Vehicle>
@{
    ViewData["Title"] = "Vehículos";
}

<section class="page-block">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">Vehículos Registrados</h2>
        <a asp-action="Create" class="btn btn-primary btn-rounded">
            <i class="bi bi-plus-lg"></i> Nuevo Vehículo
        </a>
    </div>

    <div class="row">
        @foreach (var v in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-soft border-0 rounded-3 h-100">
                    <div class="card-body">
                        <h5 class="fw-bold">@v.Brand @v.Model</h5>
                        <p><strong>Placa:</strong> @v.Plate</p>
                        <p><strong>Cliente:</strong> @v.ClientName</p>
                        <p><strong>Teléfono:</strong> @v.ClientPhone</p>
                        <p><strong>Combustible:</strong> @v.FuelType</p>
                        <p><strong>Año:</strong> @v.Year</p>
                        @if (v.LastMaintenanceDate != null)
                        {
                            <p><strong>Últ. Mantenimiento:</strong> @v.LastMaintenanceDate?.ToString("dd/MM/yyyy")</p>
                        }
                    </div>

                    <div class="card-footer bg-transparent text-end">
                        <a asp-action="Details" asp-route-plate="@v.Plate" class="btn btn-sm btn-outline-info">
                            <i class="bi bi-eye"></i> Ver
                        </a>
                        <a asp-action="Edit" asp-route-plate="@v.Plate" class="btn btn-sm btn-outline-primary">
                            <i class="bi bi-pencil"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-plate="@v.Plate" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>



@model TallerCaldera.Models.Maintenance

@{
    ViewData["Title"] = "Editar Mantenimiento";
}

<h1>Editar Mantenimiento</h1>
<hr />

<form asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Date" class="form-label"></label>
        <input asp-for="Date" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Type" class="form-label"></label>
        <input asp-for="Type" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Observations" class="form-label"></label>
        <input asp-for="Observations" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Cost" class="form-label"></label>
        <input asp-for="Cost" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Mileage" class="form-label"></label>
        <input asp-for="Mileage" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="VehiclePlate" class="form-label"></label>
        <select asp-for="VehiclePlate" asp-items="ViewBag.VehiclePlate" class="form-control"></select>
    </div>

    <hr />

    <h4>Agregar nuevas fotos</h4>
    <input type="file" name="newPhotos" multiple class="form-control mb-3" accept="image/*" />

    <h4>Fotos existentes</h4>

    <div class="row">
        @foreach (var photo in Model.Photos)
        {
            <div class="col-md-3 text-center mb-3">
                <img src="@photo.ImageUrl" class="img-fluid rounded shadow-sm mb-2" />

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="deletePhotos" value="@photo.Id" />
                    <label class="form-check-label">Eliminar</label>
                </div>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>

</form>

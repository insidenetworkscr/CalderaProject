@model TallerCaldera.Models.Maintenance

@{
    ViewData["Title"] = "Detalle de mantenimiento";
}

<h1>Detalle de mantenimiento</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Observaciones</dt>
        <dd class="col-sm-10">@Model.Observations</dd>

        <dt class="col-sm-2">Costo</dt>
        <dd class="col-sm-10">₡@(Model.Cost?.ToString("N0") ?? "0")</dd>

        <dt class="col-sm-2">Kilometraje</dt>
        <dd class="col-sm-10">@((Model.Mileage?.ToString("N0") ?? "—") + " km")</dd>

        <dt class="col-sm-2">Vehículo</dt>
        <dd class="col-sm-10">
            @if (Model.Vehicle != null)
            {
                <a asp-controller="Vehicles" asp-action="Details" asp-route-plate="@Model.VehiclePlate">
                    @Model.VehiclePlate - @Model.Vehicle.Brand @Model.Vehicle.Model
                </a>
            }
            else
            {
                @Model.VehiclePlate
            }
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Volver a la lista</a>
</div>

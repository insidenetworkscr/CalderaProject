@model TallerCaldera.Models.Maintenance

@{
    ViewData["Title"] = "Detalles del Mantenimiento";
}

<h1>Detalles del Mantenimiento</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">Fecha</dt>
    <dd class="col-sm-10">@Model.Date.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Type</dd>

    <dt class="col-sm-2">Costo</dt>
    <dd class="col-sm-10">₡@(Model.Cost?.ToString("N0") ?? "0")</dd>

    <dt class="col-sm-2">Kilometraje</dt>
    <dd class="col-sm-10">@Model.Mileage</dd>

    <dt class="col-sm-2">Observaciones</dt>
    <dd class="col-sm-10">@Model.Observations</dd>
</dl>

<h4>Fotos</h4>

@if (Model.Photos.Any())
{
    <div class="row">
        @foreach (var p in Model.Photos)
        {
            <div class="col-md-3 mb-3">
                <img src="@p.ImageUrl" class="img-fluid rounded shadow-sm" />
            </div>
        }
    </div>
}
else
{
    <p class="text-muted">Sin fotos.</p>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Volver</a>

@model IEnumerable<TallerCaldera.Models.Maintenance>

@{
    ViewData["Title"] = "Mantenimientos";
}

<h1>Mantenimientos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Fecha</th>
            <th>Tipo</th>
            <th>Placa</th>
            <th>Costo</th>
            <th>Fotos</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.Date.ToString("dd/MM/yyyy")</td>
                <td>@m.Type</td>
                <td>@m.VehiclePlate</td>
                <td>₡@(m.Cost?.ToString("N0") ?? "0")</td>

                <td>
                    @if (m.Photos != null && m.Photos.Any())
                    {
                        foreach (var p in m.Photos.Take(3))
                        {
                            <img src="@p.ImageUrl" width="50" class="rounded me-1 shadow-sm" />
                        }
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@m.Id">Ver</a> |
                    <a asp-action="Edit" asp-route-id="@m.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@m.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

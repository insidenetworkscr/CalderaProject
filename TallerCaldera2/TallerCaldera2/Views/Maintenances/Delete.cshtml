@model TallerCaldera.Models.Maintenance

@{
    ViewData["Title"] = "Eliminar mantenimiento";
}

<h1>Eliminar mantenimiento</h1>

<h3>¿Estás seguro que deseas eliminar este mantenimiento?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Vehículo</dt>
        <dd class="col-sm-10">@Model.VehiclePlate</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
